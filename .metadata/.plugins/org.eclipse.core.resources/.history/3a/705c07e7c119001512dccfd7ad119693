#include "Parameters.h"

Parameters::Parameters(const char *path) {
	ifstream file(path);
	while(file)
	{
		string line;
		getline(file, line);
		istringstream lineStream(line);
		string parameterName;
		getline(lineStream, parameterName, ':');
		string parameterValue;
		getline(lineStream, parameterValue, ' ');

		cout << _trim(parameterName) << endl;
		cout << _trim(parameterValue) << endl;
	}

}

void Parameters::_trim(string str)
{
	// trim leading spaces
	while(str.length && str[0] == ' ')
	{
		str.erase(0, 1);
	}

	// trim trailing spaces
	while(str.length() && str[str.length()-1] == ' ')
	{
		str.erase(str.length()-1, 1);
	}
}

Parameters::~Parameters() {
	// TODO Auto-generated destructor stub
}

