#ifndef GOTO_H_
#define GOTO_H_

#include "GoToBase.h"

class GoTo : public GoToBase{
private:
	GoTo *_nextGoalBehavior;
public:
	virtual bool startCond();
	virtual bool stopCond();
	virtual void action();

	void setNextGoal(GoTo *goalBehavior);

	GoTo(Robot *robot, Position *goal);
	virtual ~GoTo();
};

#endif /* GOTO_H_ */
