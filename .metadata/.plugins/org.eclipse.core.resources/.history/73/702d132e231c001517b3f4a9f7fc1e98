#include "GoTo.h"
#include <cmath>

#define MAX_DIFF_YAW 10 // Degree
#define MAX_DIFF_RADIUS 0.020  // Meter

#define FORWARD_SPEED 0.5
#define TURN_SPEED 0.1

GoTo::GoTo(Robot *robot, Position *goal) : Behavior(robot) {
	this->_goal = goal;
	this->_achieved = false;
}

void GoTo::action()
{
	float curX = this->_robot->getX();
	float curY = this->_robot->getY();
	float curYaw = this->_robot->getYaw();

	float deltaX = _goal->X() - curX;
	float deltaY = _goal->Y() - curY;

	// check if we achieved the goal within the tolerance radius
	float distance = sqrt(pow(deltaX,2) + pow(deltaY,2));
	if(distance < MAX_DIFF_RADIUS)
	{
		this->_achieved = true;
		// we achieved the goal.. stop the robot
		this->_robot->setSpeed(0,0);
		return;
	}

	// check if the goal is in front of us with MAX_DIFF_YAW tolerance
	float topY =  deltaX / cos(curYaw + MAX_DIFF_YAW);
	float bottomY = deltaX / cos(curYaw - MAX_DIFF_YAW);

	if(this->_goal->Y() < topY && this->_goal->Y() > bottomY)
	{
		this->_robot->setSpeed(FORWARD_SPEED, 0);
	}
	else if(this->_goal->Y() < bottomY) // turn right
	{
		this->_robot->setSpeed(TURN_SPEED, 0.5);
	}
	else // turn left
	{
		this->_robot->setSpeed(TURN_SPEED, -0.5);
	}

}

bool GoTo::startCond()
{
	return !this->_achieved;
}

bool GoTo::stopCond()
{
	return this->_achieved;
}

GoTo::~GoTo() {
	// TODO Auto-generated destructor stub
}
