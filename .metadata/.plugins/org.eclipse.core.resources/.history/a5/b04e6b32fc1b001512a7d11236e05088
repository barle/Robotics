#ifndef GOTO_H_
#define GOTO_H_

#include "Behavior.h"

class GoTo : public Behavior{
private:
	Position *_goal;
	bool _achived;
public:
	virtual bool startCond();
	virtual bool stopCond();
	virtual void action();

	GoTo(Robot *robot, Position *goal);
	virtual ~GoTo();
};

#endif /* GOTO_H_ */
