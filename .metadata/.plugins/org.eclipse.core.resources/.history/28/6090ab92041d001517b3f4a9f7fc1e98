#ifndef MAP_H_
#define MAP_H_

using namespace std;

#include <vector>
#include <libplayerc++/playerc++.h>
#include <iostream>
#include <fstream>
#include"lodepng.h"
#include "Managers/ConfigurationManager.h"

class Map {
private:
	vector<bool> _grid;
	unsigned _height;
	unsigned _width;
	double _gridResolution;
	double _mapResolution;

public:
	Map(ConfigurationManager *config);
	virtual ~Map();

	vector<bool> GetGrid();
	unsigned GetHeight();
	unsigned GetWidth();
	double GetResolution();

	bool IsOccupied(int x, int y);
};

#endif /* MAP_H_ */
